<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/spacing_medium">

        <!-- Title -->
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/emulate_title"
            android:textAppearance="@style/TextAppearance.NFCDarkToolkit.Headline1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Status Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_status"
            style="@style/Widget.NFCDarkToolkit.Card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_medium"
            app:layout_constraintTop_toBottomOf="@id/tv_title">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/spacing_medium">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/emulate_status"
                    android:textAppearance="@style/TextAppearance.NFCDarkToolkit.Body2" />

                <TextView
                    android:id="@+id/tv_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_tiny"
                    android:text="@string/emulate_inactive"
                    android:textAppearance="@style/TextAppearance.NFCDarkToolkit.Headline2"
                    tools:text="æ¨¡æ“¬ä¸­" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- AID Input -->
        <TextView
            android:id="@+id/tv_aid_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_large"
            android:text="@string/emulate_aid"
            android:textAppearance="@style/TextAppearance.NFCDarkToolkit.Headline2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/card_status" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_aid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_small"
            android:hint="@string/emulate_aid_hint"
            app:boxBackgroundColor="@color/color_surface"
            app:layout_constraintTop_toBottomOf="@id/tv_aid_label">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_aid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:inputType="textCapCharacters"
                android:text="F0010203040506"
                android:textColor="@color/text_primary" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Response Data Input -->
        <TextView
            android:id="@+id/tv_response_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_medium"
            android:text="@string/emulate_response"
            android:textAppearance="@style/TextAppearance.NFCDarkToolkit.Headline2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/til_aid" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_response"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_small"
            android:hint="@string/emulate_response_hint"
            app:boxBackgroundColor="@color/color_surface"
            app:layout_constraintTop_toBottomOf="@id/tv_response_label">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_response"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:inputType="textCapCharacters|textMultiLine"
                android:minLines="3"
                android:textColor="@color/text_primary" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Control Buttons -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_start"
            style="@style/Widget.NFCDarkToolkit.Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_large"
            android:layout_marginEnd="@dimen/spacing_small"
            android:text="@string/emulate_start"
            app:icon="@drawable/ic_emulate"
            app:layout_constraintEnd_toStartOf="@id/btn_stop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/til_response" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_stop"
            style="@style/Widget.NFCDarkToolkit.Button.Outlined"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_small"
            android:text="@string/emulate_stop"
            app:icon="@drawable/ic_settings"
            app:layout_constraintBaseline_toBaselineOf="@id/btn_start"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/btn_start" />

        <!-- Info -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_info"
            style="@style/Widget.NFCDarkToolkit.Card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_large"
            app:cardBackgroundColor="@color/color_surface_variant"
            app:layout_constraintTop_toBottomOf="@id/btn_start">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/spacing_medium">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ’¡ æç¤º"
                    android:textAppearance="@style/TextAppearance.NFCDarkToolkit.Body1"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_small"
                    android:text="â€¢ AID å¿…é ˆæ˜¯åå…­é€²ä½æ ¼å¼ï¼ˆè‡³å°‘ 10 å€‹å­—ç¬¦ï¼‰\nâ€¢ å›žæ‡‰è³‡æ–™ç‚ºé¸å¡«ï¼Œè‹¥ä¸å¡«å‰‡è‡ªå‹•å›žå‚³æˆåŠŸç‹€æ…‹\nâ€¢ å•Ÿå‹•å¾Œå°‡æ‰‹æ©Ÿé è¿‘è®€å¡æ©Ÿé€²è¡Œæ¸¬è©¦\nâ€¢ åƒ…ä¾›é–‹ç™¼æ¸¬è©¦ä½¿ç”¨"
                    android:textAppearance="@style/TextAppearance.NFCDarkToolkit.Body2" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>


<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/spacing_medium">

        <!-- Title -->
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/scan_title"
            android:textAppearance="@style/TextAppearance.NFCDarkToolkit.Headline1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Status -->
        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_small"
            android:text="@string/nfc_ready"
            android:textAppearance="@style/TextAppearance.NFCDarkToolkit.Body2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_title" />

        <!-- Progress Bar -->
        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_large"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_status"
            tools:visibility="visible" />

        <!-- Tag Info Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_tag_info"
            style="@style/Widget.NFCDarkToolkit.Card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_large"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/tv_status"
            tools:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/spacing_medium">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/scan_tag_info"
                    android:textAppearance="@style/TextAppearance.NFCDarkToolkit.Headline2" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/spacing_small"
                    android:layout_marginBottom="@dimen/spacing_small"
                    android:background="@color/color_divider" />

                <!-- Tag ID -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_small"
                    android:text="@string/scan_tag_id"
                    android:textAppearance="@style/TextAppearance.NFCDarkToolkit.Body2" />

                <TextView
                    android:id="@+id/tv_tag_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_tiny"
                    android:textAppearance="@style/TextAppearance.NFCDarkToolkit.Body1"
                    tools:text="04:E2:3C:AA:5B:28:80" />

                <!-- Tag Type -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_medium"
                    android:text="@string/scan_tag_type"
                    android:textAppearance="@style/TextAppearance.NFCDarkToolkit.Body2" />

                <TextView
                    android:id="@+id/tv_tag_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_tiny"
                    android:textAppearance="@style/TextAppearance.NFCDarkToolkit.Body1"
                    tools:text="MIFARE_ULTRALIGHT" />

                <!-- Tech List -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_medium"
                    android:text="@string/scan_tag_tech"
                    android:textAppearance="@style/TextAppearance.NFCDarkToolkit.Body2" />

                <TextView
                    android:id="@+id/tv_tech_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_tiny"
                    android:textAppearance="@style/TextAppearance.NFCDarkToolkit.Body1"
                    tools:text="NfcA, MifareUltralight, Ndef" />

                <!-- Writable -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_medium"
                    android:text="@string/scan_tag_writable"
                    android:textAppearance="@style/TextAppearance.NFCDarkToolkit.Body2" />

                <TextView
                    android:id="@+id/tv_writable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_tiny"
                    android:textAppearance="@style/TextAppearance.NFCDarkToolkit.Body1"
                    tools:text="可寫入" />

                <!-- Size -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_medium"
                    android:text="@string/scan_tag_size"
                    android:textAppearance="@style/TextAppearance.NFCDarkToolkit.Body2" />

                <TextView
                    android:id="@+id/tv_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_tiny"
                    android:textAppearance="@style/TextAppearance.NFCDarkToolkit.Body1"
                    tools:text="0 / 144 bytes" />

                <!-- NDEF Content -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_medium"
                    android:text="@string/scan_ndef_content"
                    android:textAppearance="@style/TextAppearance.NFCDarkToolkit.Body2" />

                <TextView
                    android:id="@+id/tv_ndef_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_tiny"
                    android:textAppearance="@style/TextAppearance.NFCDarkToolkit.Body1"
                    tools:text="類型: TEXT\n內容: Hello World" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>

